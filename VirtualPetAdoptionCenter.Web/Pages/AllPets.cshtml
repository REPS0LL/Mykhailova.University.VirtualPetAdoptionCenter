@page
@model VirtualPetAdoptionCenter.Web.Pages.AllPetsModel


<head>
    <link rel="stylesheet" href="~/css/PetStyle.css" />
</head>

<section class="articles">
    @foreach (var pet in Model.Pets)
    {
        <article>
            <div class="article-wrapper">
                <figure>
                    <img src="@pet.Image" alt="" />
                </figure>
                <div class="article-body">
                    <h2>@pet.Name</h2>
                    <p>@pet.Description</p>
                    <form method="post">
                        <button type="submit" formaction="/Pet/Adopt" id="petId" name="@pet.Id">Adopt this Pet</button>
                    </form>
                </div>
            </div>
        </article>
    }
</section>
